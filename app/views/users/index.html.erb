<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Users</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %>
        <% unless current_user.nonfriendable?(user) %>
          <td><%= link_to 'Send Friend Invite', friendships_path(friend_id: user.id), method: :post, class: "btn btn-primary" %></td>
        <% end %>
        <td><%= link_to 'Show', user_path(user.id), class: "btn btn-secondary" %></td>
        <td><small><%= link_to 'Edit', edit_user_path(user) %></small></td>
        <td><small><%= link_to 'Destroy', user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></small></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
